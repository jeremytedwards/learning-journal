{% extends "blog_base.jinja2" %}
{% block show_item %}
    <h2>Login</h2>
    {% if form.errors %}
        <p class="errors">Error: {{ form.errors.pop() }}</p>
    {% endif %}
    <form action="" method="POST">
        <div class="field">
            <label for="title">User Name</label>
            {{ form.username(size=30, maxlength=50) | markdown | safe }}
        </div>
        <div class="field">
            <label for="Content">Password</label>
            {{ form.password(size=30, maxlength=50) | markdown | safe }}
        </div>
        <div class="submit">
            <input type="submit" name="submit" value="submit"/>
        </div>
    </form>
{% endblock %}